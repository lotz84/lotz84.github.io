<div style="float:left;width:55%">
    <div id="blog-index">
        <h2>Blog</h2>
        <ul>
        <% var count = 1 %>
        <% for(slug in public.posts._data) { %>
            <% if(slug == "index") { continue; } %>
            <% var post = public.posts._data[slug] %>
            <li id="post<%- count %>"><a href="posts/<%- slug %>"><%- post.title %></a> - <%- post.date %></li>
            <% count += 1 %>
        <% } %>
        </ul>
    </div>
</div>

